<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mixedLifeCycle_master"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.androidedu.kodluyoruzakademi.activityfragmentlifecycle.MixedLifeCycleActivity">


    <fragment
        android:id="@+id/fragment2"
        android:name="com.androidedu.kodluyoruzakademi.activityfragmentlifecycle.AFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <fragment
            android:id="@+id/fragment3"
            android:name="com.androidedu.kodluyoruzakademi.activityfragmentlifecycle.BFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <FrameLayout
            android:id="@+id/dynamicFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>


</LinearLayout>
